@model Models.Person

@using (Ajax.BeginForm("Index", "Home", new AjaxOptions() { HttpMethod = "Post", OnBegin = "ajaxFormValidation.Begin(xhr, status, 'personForm')", OnSuccess = "ajaxFormValidation.Success(data, status, xhr, 'personForm')" }, new { id = "personForm" }))
{
   
    @Html.ValidationSummaryAJAX();
                                   
    <fieldset>
        <legend>Person</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.AJAXValidationFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Age)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Age)
            @Html.AJAXValidationFor(model => model.Age)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Threshold)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Threshold)
            @Html.AJAXValidationFor(model => model.Threshold)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TitleId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TitleId, new SelectList(ViewBag.Titles as List<Models.Title>, "Id", "Name"), "please select")
            @Html.AJAXValidationFor(model => model.TitleId)
        </div>

        <p>
            <input type="submit" value="Create" />
            @Html.ClearButtonAJAX()
        </p>
    </fieldset>
}